@model MedicalFileViewModel

@{
    ViewData["Title"] = "Edit Medical File";
}

<h2>Edit</h2>

<h4>MedicalFile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="CheckUpId" class="control-label"></label>
                <select asp-for="CheckUpId" class="form-control" asp-items="Model.CheckUps"></select>
                <span asp-validation-for="CheckUpId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="newFile" class="control-label">Upload New File</label>
                <input type="file" id="newFile" name="newFile" class="form-control" />
            </div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ObjectId" />
            <div class="form-group">
                <br />
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
