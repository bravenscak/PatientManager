@model PatientManagerClassLibrary.Models.Prescription

@{
    ViewData["Title"] = "Prescription Details";
}

<h2>Prescription Details</h2>

<div>
    <h4>Prescription</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Medication
        </dt>
        <dd class="col-sm-10">
            @Model.Medication
        </dd>
        <dt class="col-sm-2">
            Dosage
        </dt>
        <dd class="col-sm-10">
            @Model.Dosage
        </dd>
        <dt class="col-sm-2">
            Start date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Patient Name
        </dt>
        <dd class="col-sm-10">
            @Model.Patient.FirstName @Model.Patient.LastName
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

